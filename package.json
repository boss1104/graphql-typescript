{
  "name": "server",
  "version": "1.0.0",
  "email": "faisal_manzer@yahoo.in",
  "repository": {
    "type": "git",
    "url": "https://github.com/Faisal-Manzer/graphql-typescript-server.git"
  },
  "keywords": [
    "typescript",
    "GraphQL",
    "graphql-yoga",
    "role-based"
  ],
  "description": "GraphQL template server with role base access model",
  "license": "MIT",
  "devDependencies": {
    "@gql2ts/from-schema": "^2.0.0-4",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^3.13.0",
    "@types/connect-redis": "^0.0.13",
    "@types/express-rate-limit": "^5.0.0",
    "@types/express-session": "^1.17.0",
    "@types/express-slow-down": "^1.3.0",
    "@types/glob": "^7.1.1",
    "@types/ioredis": "^4.16.1",
    "@types/jest": "^25.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.13.5",
    "@types/node-fetch": "^2.5.7",
    "@types/passport": "^1.0.3",
    "@types/passport-github2": "^1.2.4",
    "@types/passport-google-oauth20": "^2.0.3",
    "@types/passport-linkedin-oauth2": "^1.5.1",
    "@types/rate-limit-redis": "^1.7.1",
    "@types/redis": "^2.8.20",
    "@types/request-promise": "^4.1.46",
    "@types/shortid": "^0.0.29",
    "@types/uuid": "^7.0.3",
    "@types/ws": "^7.2.4",
    "@types/yup": "^0.28.3",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "copyfiles": "^2.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "handlebars": "4.7.6",
    "husky": "^4.2.5",
    "jest": "22",
    "lint-staged": "^10.2.2",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "22",
    "ts-node": "^8.10.1",
    "typescript": "3.9.2",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bull": "^3.14.0",
    "connect-redis": "^4.0.4",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.1.3",
    "express-session": "^1.17.1",
    "express-slow-down": "^1.3.1",
    "fxa-common-password-list": "^0.0.4",
    "glob": "^7.1.6",
    "graphql-import": "^1.0.2",
    "graphql-tools": "^5.0.0",
    "graphql-yoga": "^1.18.3",
    "ioredis": "^4.16.3",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.8",
    "mkdirp": "^1.0.4",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "per-env": "^1.0.2",
    "pg": "^8.1.0",
    "rate-limit-redis": "^1.7.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "shortid": "^2.2.15",
    "typeorm": "0.2.24",
    "unique-names-generator": "^4.2.0",
    "uuid": "^8.0.0",
    "yup": "^0.28.5"
  },
  "per-env": {
    "production": {
      "NODE_PATH": "."
    },
    "development": {
      "NODE_PATH": "src"
    }
  },
  "scripts": {
    "start": "per-env",
    "start:development": "nodemon --exec ts-node --files src/index.ts",
    "start:production": "node index.js",
    "lint": "eslint '*/**/*.{js,ts,json}' --fix",
    "test": "NODE_ENV=test NODE_PATH=src TS_NODE_FILES=true jest -i --forceExit",
    "db": "TS_NODE_TRANSPILE_ONLY=true NODE_PATH=src ts-node ./node_modules/typeorm/cli.js --config ormconfig.ts",
    "makemigrations": "yarn db migration:generate",
    "migrate": "yarn db migration:run",
    "gen-schema-types": "NODE_PATH=src ts-node ./lib/generateGQLTypes.ts",
    "build": "rimraf dist && tsc && tsc ormconfig.ts --outDir dist/ && copyfiles -u 1 \"**/*.gql\" dist",
    "artifact": "./lib/pack.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "globalSetup": "./lib/test/config.js",
    "testURL": "http://localhost:4001",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "dist"
    ],
    "coveragePathIgnorePatterns": [
      ".*/entities/.*",
      ".*/migrations/.*",
      "ormconfig.ts"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
