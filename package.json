{
   "name": "server",
   "version": "1.0.0",
   "email": "faisal_manzer@yahoo.in",
   "repository": {
      "type": "git",
      "url": "https://github.com/Faisal-Manzer/graphql-typescript-server.git"
   },
   "keywords": [
      "typescript",
      "GraphQL",
      "graphql-yoga",
      "role-based"
   ],
   "description": "GraphQL template server with role base access model",
   "license": "MIT",
   "devDependencies": {
      "@types/bcrypt": "^3.0.0",
      "@types/connect-redis": "^0.0.13",
      "@types/express-session": "^1.17.0",
      "@types/glob": "^7.1.1",
      "@types/ioredis": "^4.14.9",
      "@types/jest": "^25.2.1",
      "@types/node": "^8.0.29",
      "@types/redis": "^2.8.17",
      "@types/request-promise": "^4.1.46",
      "@types/uuid": "^7.0.2",
      "@types/yup": "^0.26.37",
      "@typescript-eslint/eslint-plugin": "^2.27.0",
      "@typescript-eslint/parser": "^2.27.0",
      "eslint": "^6.8.0",
      "eslint-config-prettier": "^6.10.1",
      "eslint-plugin-prettier": "^3.1.2",
      "husky": "^4.2.5",
      "jest": "22",
      "lint-staged": "^10.1.3",
      "nodemon": "^2.0.3",
      "prettier": "^2.0.4",
      "ts-jest": "22",
      "ts-node": "^8.8.2",
      "typescript": "3.3.3333"
   },
   "dependencies": {
      "bcrypt": "^4.0.1",
      "connect-redis": "^4.0.4",
      "dotenv": "^8.2.0",
      "express-session": "^1.17.0",
      "glob": "^7.1.6",
      "graphql-import": "^1.0.2",
      "graphql-tools": "^4.0.7",
      "graphql-yoga": "^1.18.3",
      "ioredis": "^4.16.1",
      "merge-graphql-schemas": "^1.7.7",
      "pg": "^8.0.2",
      "redis": "^3.0.2",
      "reflect-metadata": "^0.1.10",
      "request-promise": "^4.2.5",
      "typeorm": "0.2.24",
      "unique-names-generator": "^4.2.0",
      "uuid": "^7.0.3",
      "yup": "^0.28.3"
   },
   "scripts": {
      "start": "NODE_ENV=development NODE_PATH=src nodemon --exec ts-node --files src/index.ts",
      "lint": "eslint '*/**/*.{js,ts,json}' --fix",
      "test": "NODE_ENV=test NODE_PATH=src jest -i --forceExit"
   },
   "husky": {
      "hooks": {
         "pre-commit": "lint-staged"
      }
   },
   "lint-staged": {
      "*.{js,ts,tsx}": [
         "eslint --fix"
      ]
   },
   "jest": {
      "globalSetup": "./lib/test/config.js",
      "testURL": "http://localhost:4001",
      "transform": {
         "^.+\\.tsx?$": "ts-jest"
      },
      "testEnvironment": "node",
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
   }
}
